%% -*- erlang -*-
%% @doc Default database destination
{mapping, "db.dir", "fifo_db.db_path",
 [{default, "{{db_path}}"},
  {datatype, string}]}.

%% @doc Default database destination
{mapping, "db.backend", "fifo_db.backend",
 [{default, hanoidb},
  {datatype, {enum, [hanoidb, bitcask, leveldb]}}]}.

{translation,
 "fifo_db.backend",
 fun(Conf) ->
         [{_, B}] = cuttlefish_util:filter_by_variable_starts_with("db.backend", Conf),
         case B of
             hanoidb -> fifo_db_hanoidb;
             bitcask -> fifo_db_bitcask;
             leveldb -> fifo_db_leveldb
         end
 end
}.
