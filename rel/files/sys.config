[{sasl, [{sasl_error_logger, {file, "/var/log/fifo/sniffle-error.log"}},
	 {errlog_type, error},
	 {error_logger_mf_dir, "/var/log/fifo"},      % Log directory
	 {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
	 {error_logger_mf_maxfiles, 5}           % 5 files max
	]},
 {gproc, 
  [{gproc_dist, all}]},
 {sniffle, 
  []},
 {redgrid,
  [
   {url, "_REDIS_URL_"},
   {meta, []},
   {anonymous, false},
   {domain, "_REDIS_DOMAIN_"},
   {version, ""},
   {local_ip, "_OWN_IP_"}
  ]},
 {alog, 
  [{enabled_loggers, [alog_tty, alog_disk_log]},
   {flows, 
    [{{mod,['_']}, {'=<', warning},
      [alog_tty, {alog_disk_log,
		  [{name, sniffle_warn},
		   {file, "/var/log/fifo/sniffle_warn.log"}]}]},
     {{tag, [bark]}, {'=<', warning},
      [alog_tty, {alog_disk_log,
		  [{name, sniffle_warn},
		   {file, "/var/log/fifo/bark_warn.log"}]}]},
     {{tag, [cloudapi]}, {'=<', warning},
      [alog_tty, {alog_disk_log,
		  [{name, sniffle_warn},
		   {file, "/var/log/fifo/cloudapi_warn.log"}]}]}
    ]}
  ]}
].

