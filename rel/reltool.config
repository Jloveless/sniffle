{sys, [
       {lib_dirs, ["../deps", "../apps"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "sniffle", "0.1.1",
        [
         kernel,
         stdlib,
         sasl,
	 alog,
	 compiler,
	 syntax_tools,
	 edoc,
	 edown,
	 erllibcloudapi,
	 gen_leader,
	 jsx,
	 meck,
	 nicedecimal,
	 lager,
	 crypto,
	 lhttpc,
	 public_key,
	 redo,
	 uuid,
	 backyard,
	 libsnarl,
	 libchunter,
         sniffle
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "sniffle"},
       {profile, embedded},
       {incl_cond, exclude},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, sasl,   [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, compiler, [{incl_cond, include}]},	   
       {app, kernel, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, inets, [{incl_cond, include}]},
       {app, public_key, [{incl_cond, include}]},
       {app, syntax_tools, [{incl_cond, include}]},
       {app, ssl, [{incl_cond, include}]},
       {app, edoc, [{incl_cond, include}]},
       {app, alog,   [{incl_cond, include}]},
       {app, lager,   [{incl_cond, include}]},
       {app, edown,   [{incl_cond, include}]},
       {app, gen_leader,   [{incl_cond, include}]},
       {app, gproc,   [{incl_cond, include}]},
       {app, jsx,   [{incl_cond, include}]},
       {app, lhttpc,   [{incl_cond, include}]},
       {app, meck,   [{incl_cond, include}]},
       {app, nicedecimal,   [{incl_cond, include}]},
       {app, parse_trans,   [{incl_cond, include}]},
       {app, nodefinder,   [{incl_cond, include}]},
       {app, backyard,   [{incl_cond, include}]},
       {app, redo,   [{incl_cond, include}]},
       {app, libsnarl,   [{incl_cond, include}]},
       {app, libchunter,   [{incl_cond, include}]},
       {app, erllibcloudapi,   [{incl_cond, include}]},
       {app, syslog,   [{incl_cond, include}]},
       {app, uuid,   [{incl_cond, include}]},
       {app, sniffle, [{incl_cond, include}]}
      ]}.

{target_dir, "sniffle"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/sniffle", "bin/sniffle"},
           {copy, "files/sniffle.cmd", "bin/sniffle.cmd"},
           {copy, "files/sniffle.xml", "sniffle.xml"},
           {copy, "files/epmd.xml", "epmd.xml"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.
